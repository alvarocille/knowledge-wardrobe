<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="802.0" prefWidth="1129.0" spacing="20.0" stylesheets="@../styles/estilos.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <Label styleClass="texto-destacado" text="Conocimientos del Usuario">
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
    </Label>
    <ListView fx:id="conocimientoListView" prefHeight="662.0" prefWidth="1129.0">
    </ListView>
    <HBox alignment="CENTER" spacing="5">
        <TextField fx:id="nombreTextField" prefHeight="31.0" prefWidth="193.0" promptText="Nombre del conocimiento" styleClass="placeholder" />
        <TextField fx:id="descripcionTextField" promptText="Descripción" styleClass="placeholder" />
        <ComboBox prefWidth="150.0" promptText="Estado" styleClass="placeholder" />
    </HBox>
    <Button onAction="#agregarConocimiento" styleClass="boton-destacado" text="Añadir Conocimiento">
        <VBox.margin>
            <Insets bottom="15.0" />
        </VBox.margin>
    </Button>
</VBox>
