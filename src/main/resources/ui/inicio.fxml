<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.image.ImageView?>
<VBox alignment="CENTER" prefHeight="350.0" prefWidth="555.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <AnchorPane prefHeight="326.0" prefWidth="604.0">
      <Button fx:id="loginBtn" layoutX="128.0" layoutY="167.0" mnemonicParsing="false" onAction="#iniciarSesion" text="INICIAR SESIÓN">
         <font>
            <Font name="Georgia Pro" size="20.0" />
         </font>
      </Button>
      <TextField fx:id="tfUser" layoutX="213.0" layoutY="45.0" prefHeight="31.0" prefWidth="227.0" />
      <PasswordField fx:id="tfPassword" layoutX="213.0" layoutY="111.0" prefHeight="31.0" prefWidth="227.0" />
      <Button fx:id="passwordBtn" layoutX="394.0" layoutY="111.0" onAction="#verPassword" prefHeight="31.0" prefWidth="47.0">
         <graphic>
            <ImageView fx:id="passwordOjo" fitHeight="20" fitWidth="20" />
         </graphic>
      </Button>
      <Label layoutX="82.0" layoutY="48.0" text="Usuario">
         <font>
            <Font name="Georgia Pro Black Italic" size="20.0" />
         </font>
      </Label>
      <Label layoutX="43.0" layoutY="114.0" text="Contraseña">
         <font>
            <Font name="Georgia Pro Black Italic" size="20.0" />
         </font>
      </Label>
      <Button fx:id="registroBtn" layoutX="309.0" layoutY="242.0" mnemonicParsing="false" onAction="#abrirRegistro" prefWidth="162.0" text="REGISTRO">
         <font>
            <Font name="Georgia Pro" size="20.0" />
         </font>
      </Button>
      <Label layoutX="55.0" layoutY="249.0" text="¿No estás registrado?">
         <font>
            <Font name="Georgia Pro Black" size="20.0" />
         </font>
      </Label>
      <Button fx:id="cleanBtn" layoutX="341.0" layoutY="172.0" mnemonicParsing="false" onAction="#limpiarCampos" prefHeight="24.0" prefWidth="75.0" text="Limpiar">
         <font>
            <Font name="Georgia Pro" size="15.0" />
         </font>
      </Button>
      <Label fx:id="notFound" layoutX="137.0" layoutY="6.0" text="Usuario o contraseña incorrectos" textFill="RED" visible="false">
         <font>
            <Font name="Georgia Pro Bold" size="14.0" />
         </font>
      </Label>
   </AnchorPane>
</VBox>
